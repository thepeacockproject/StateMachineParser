{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ES2021",
        "module": "es2020",
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "build",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "stripInternal": true,
        "resolveJsonModule": true,
        "emitDeclarationOnly": true
    },
    "include": ["src"]
}
